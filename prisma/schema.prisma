generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Institution {
  id          String       @id @default(uuid())
  name        String?
  city        String
  createdAt   DateTime     @default(now())
  pilotTokens PilotToken[]
  rateLimits  RateLimit[]
  generations Generation[]
}

model PilotToken {
  tokenHash     String      @id
  institutionId String
  institution   Institution @relation(fields: [institutionId], references: [id])
  expiresAt     DateTime
  revokedAt     DateTime?
  createdAt     DateTime    @default(now())
}

model RateLimit {
  institutionId String
  institution   Institution @relation(fields: [institutionId], references: [id])
  date          String
  count         Int         @default(0)

  @@id([institutionId, date])
}

model Generation {
  id             String      @id @default(uuid())
  institutionId  String
  institution    Institution @relation(fields: [institutionId], references: [id])
  createdAt      DateTime    @default(now())
  requestPayload Json
  outlineJson    Json
  finalJson      Json
  validationPass Boolean     @default(false)
  latencyMs      Int?
  modelName      String?
  regenerateFlag Boolean     @default(false)
  errorCode      String?
}
